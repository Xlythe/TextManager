<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@android:color/white</item>
        <item name="android:actionModeSplitBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Main">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.Compose">
        <item name="android:windowBackground">@color/colorCompose</item>
    </style>

    <style name="AppTheme.NoActionBar.Compose.Edit">
    </style>

    <style name="Date">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="Body">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.Left">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body.Right">
        <item name="android:textColor">@color/titleText</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#1E000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
